@page
@model Online_Food_Ordering.Pages.CustomerProfiles.EditModel

@{
    ViewData["Title"] = "Edit Customer Profile";
}
<div class="bg-opacity-50 bg-light p-3">

    <h1>Edit Customer Profile</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CustomerProfile.CustomerProfileId" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="CustomerProfile.FullName" class="control-label"></label>
                <input asp-for="CustomerProfile.FullName" class="form-control" />
                <span asp-validation-for="CustomerProfile.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="CustomerProfile.Email" class="control-label"></label>
                <input asp-for="CustomerProfile.Email" class="form-control" />
                <span asp-validation-for="CustomerProfile.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="CustomerProfile.PhoneNumber" class="control-label"></label>
                <input asp-for="CustomerProfile.PhoneNumber" class="form-control" />
                <span asp-validation-for="CustomerProfile.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
